# Docker Environment Variables
# Copy this file to .env and update the values

# PostgreSQL Configuration
POSTGRES_DB=homeopathy_db
POSTGRES_USER=homeopathy_user
POSTGRES_PASSWORD=change-this-secure-password

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-very-long-random-string-minimum-32-characters
DATABASE_URL=postgresql://homeopathy_user:change-this-secure-password@db:5432/homeopathy_db

# Frontend Configuration
VITE_API_URL=http://localhost:5000

# Optional: If you want to bind to specific host
# HOST=0.0.0.0
# PORT=5000